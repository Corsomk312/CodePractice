<li class="tweet">
  <img class="avatar" src="<%= avatar_url %>" alt="">

  <div class="tweet-content">
    <p>
      <span class="full-name"><%= handle %></span>
      <span class="username"><%= username %></span>
      <span class="timestamp"><%= created_at %></span>
    </p>
    <p><%= content %></p>
  </div>
</li>
